<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfeaf1"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/nanodegree_app_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        style="@style/AppTheme"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:textAppearance="@android:style/TextAppearance.Large"/>

    <Button
        android:text="@string/popular_movies_button_label"
        android:id="@+id/popular_movies_button"
        style="@style/PortfolioButton" />

    <Button
        android:text="@string/scores_button_label"
        android:id="@+id/scores_button"
        android:layout_below="@+id/popular_movies_button"
        style="@style/PortfolioButton" />

    <Button
        android:text="@string/library_button_label"
        android:id="@+id/library_button"
        android:layout_below="@+id/scores_button"
        style="@style/PortfolioButton" />

    <Button
        android:text="@string/build_it_bigger_button_label"
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/library_button"
        style="@style/PortfolioButton" />

    <Button
        android:text="@string/xyz_reader_button_label"
        android:id="@+id/xyz_reader_button"
        android:layout_below="@+id/build_it_bigger_button"
        style="@style/PortfolioButton"/>

    <Button
        android:text="@string/capstone_button_label"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/xyz_reader_button"
        android:paddingBottom="@dimen/activity_vertical_margin"
        style="@style/PortfolioButton.Capstone" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/snackbar_location"/>

</RelativeLayout>
